{
    "name": "drmonty/datatables-responsive",
    "description": "Responsive extension for DataTables, providing support for complex tables on all device screen sizes",
    "type": "component",
    "homepage": "http://www.datatables.net/",
    "author": {
        "name": "Allan Jardine",
        "url": "http://sprymedia.co.uk"
    },
    "require": {
        "robloach/component-installer": "*"
    },
    "require": {
        "components/jquery": ">=1.7.0"
    },
    "extra": {
        "component": {
            "scripts": [
                "js/dataTables.responsive.js"
            ],
            "files": [
                "js/responsive.foundation.js",
                "js/responsive.jqueryui.js",
                "js/responsive.bootstrap.min.js",
                "js/responsive.bootstrap.js",
                "js/responsive.jqueryui.min.js",
                "js/responsive.foundation.min.js",
                "js/dataTables.responsive.js",
                "js/dataTables.responsive.min.js",
                "css/dataTables.responsive.css",
                "css/responsive.bootstrap.css",
                "css/responsive.foundation.css",
                "css/responsive.bootstrap.min.css",
                "css/dataTables.responsive.min.css",
                "css/responsive.jqueryui.min.css",
                "css/responsive.foundation.min.css",
                "css/responsive.jqueryui.css"
            ],
            "shim": {
                "deps": ["jquery"]
            }
        }
    }
}